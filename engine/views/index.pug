extends layout

block content
  div(class='container')
    div(class='row')
      div(class='col-md-12')
        div(class='card-container')
          h1= "Ultimas Transacciones"
        div(class='col-md-4')
          div(class='card-container-child col-md-12')
            h1(class='text-blue')= "Total"
            p= " $ 35000.00 MXN"
        div(class='col-md-4')
          div(class='card-container-child col-md-12')
            h1(class='text-blue')= "Compras"
            p= " 7"
        div(class='col-md-4')
          div(class='card-container-child col-md-12')
            h1(class='text-danger')= "Fraudes"
            p(class='ribbon-danger')= "2"
      div(class='col-md-12 transaction-container')
        each tr in [1,2,3,4,5,6,7]
          a(href='transactions/'+tr)
            -var tr_class ='transaction'
              if tr == 1 || tr == 5
                -tr_class ='fraud-transaction'
              else
                -tr_class ='transaction'
              div(class=tr_class)
                div(class='container')
                  div(class='col-md-1 col-sm-1 col-xs-1')
                    div(class='circle-brand')
                      i(class='glyphicon glyphicon-fire')
                  div(class='col-md-8 col-sm-8 col-xs-8 col-xs-offset-1 col-md-offset-0 col-sm-offset-0')
                    div(class='transaction-text')
                      h5(class='title-transaction')= "Transaccion: Dummy #"+tr
                      p= "Martes 15 de Marzo del 2018"
                  div(class='col-md-1 col-sm-1 col-xs-1 pull-right')
                    i(class='arrow-right glyphicon glyphicon-chevron-right ')

                